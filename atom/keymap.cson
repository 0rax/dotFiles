# UI
'body':
  'cmd-\\':       'tree-view:toggle'
  'cmd-\'':       'minimap:toggle'

# Editor
'atom-workspace atom-text-editor:not([mini])':
  'ctrl-up':      'editor:move-to-beginning-of-previous-paragraph'
  'ctrl-down':    'editor:move-to-beginning-of-next-paragraph'
  'cmd-alt-down': 'editor:move-line-down'
  'cmd-alt-up':   'editor:move-line-up'
  'ctrl-,':       'editor:toggle-line-comments'
# Linter
  'alt->':        'linter:next-message'
  'alt-<':        'linter:previous-message'

# Build & Preview
'atom-workspace atom-text-editor[data-grammar~="latex"]':
  'ctrl-shift-m': 'latex:build'
  'ctrl-alt-b':   'editor:move-to-previous-subword-boundary'
'atom-workspace atom-text-editor[data-grammar~="gfm"]':
  'ctrl-shift-m': 'markdown-preview:toggle'
