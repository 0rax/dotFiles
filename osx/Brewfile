#!/usr/bin/env brew bundle
#
# require:
#   - brew:
#       /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
#   - brew bundle:
#       brew tap homebrew/bundle
#
# execute with:
#   brew bundle
#

### Taps
# Brew
tap "homebrew/core"               # https://github.com/homebrew/homebrew-core
