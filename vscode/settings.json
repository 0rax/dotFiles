{
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[fish]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 8
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[properties]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4
    },
    "[shellscript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[toml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "amVim.bindCtrlCommands": false,
    "better-comments.highlightPlainText": false,
    "better-comments.multilineComments": true,
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "backgroundColor": "transparent"
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "note",
            "color": "#98C379",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "fixme",
            "color": "#FF8C00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        }
    ],
    "bracket-pair-colorizer-2.showBracketsInGutter": true,
    "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
    "bracket-pair-colorizer-2.showBracketsInRuler": true,
    "bracket-pair-colorizer-2.rulerPosition": "Left",
    "bracket-pair-colorizer-2.highlightActiveScope": true,
    "breadcrumbs.enabled": true,
    "breadcrumbs.showFunctions": true,
    "breadcrumbs.filePath": "last",
    "breadcrumbs.showVariables": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.detectIndentation": false,
    "editor.fontFamily": "'Hasklug Nerd Font', 'Hasklig', Monaco, monofur, Menlo, monospace",
    "editor.fontLigatures": true,
    "editor.insertSpaces": true,
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80
    ],
    "editor.scrollBeyondLastLine": false,
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.pgsql": "sql",
        "APKBUILD": "shellscript",
        "Brewfile": "ruby",
        "Dockerfile.*": "dockerfile",
        "ssh_config": "ssh_config",
        "Makefile.*": "makefile"
    },
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.snapshots": true,
        "**/.vscode": true,
        "**/*.code-workspace": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.ignoreLimitWarning": true,
    "go.gopath": "/home/orax/projects/go",
    "go.inferGopath": true,
    "go.toolsGopath": "/home/orax/projects/go",
    "go.useLanguageServer": false,
    "go.vetOnSave": "package",
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "markdown.extension.toc.githubCompatibility": true,
    "markdown.preview.scrollEditorWithPreview": false,
    "outline.showVariables": false,
    "python.venvPath": "~/.virtualenvs/",
    "python.formatting.provider": "black",
    "python.jediEnabled": true,
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=100",
        "--ignore=E501,W503"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "search.exclude": {
        "**/vendor": true
    },
    "shellcheck.customArgs": [
        "-x"
    ],
    "shellcheck.run": "onSave",
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.language": [
        "en"
    ],
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.shell.linux": "/usr/bin/fish",
    "window.menuBarVisibility": "default",
    "window.restoreWindows": "one",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "statusBar.background": "#16181D",
        "statusBar.noFolderBackground": "#16181D"
    },
    "workbench.colorTheme": "Ocean Dark Extended",
    "workbench.editor.revealIfOpen": true,
    "workbench.iconTheme": "file-icons",
    "workbench.startupEditor": "none",
    "yaml.customTags": [
        // CloudFormation tags
        "!And",
        "!If",
        "!Not",
        "!Equals",
        "!Or",
        "!FindInMap",
        "!Base64",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!Select",
        "!Split",
        "!Join",
        // Sceptre tags
        "!environment_variable",
        "!file_contents",
        "!stack_output",
        "!stack_output_external",
        "!cmd",
        "!asg_scaling_processes"
    ],
    "yaml.format.enable": true,
    "zenMode.fullScreen": false
}
